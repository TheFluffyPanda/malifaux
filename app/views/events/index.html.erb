<% if current_user.admin? %>
	<div class="container">
		<div class="admin">
			<h1>Event Admin</h1>		
			<table>
				<thead>
					<tr>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<td colspan=3><hr></td>
					</tr>
				<% @events.each do |event| %>
					<tr>
						<td colspan=2><%= event.name %></td>
					</tr>
					<tr>
						<td colspan=2><%= event.description %></td>
					</tr>
					<tr>
						<td colspan=2><%= event.active? %></td>
					</tr>
					<tr>
						<td><%= link_to 'Edit', edit_event_path(event) %></td>
						<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<tr>
						<td colspan=3><hr></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<br> <%= link_to 'New Event', new_event_path %>
	</div>
</div>
<% else %>
	<div class="container">
		<div class="admin">
			Not Authorised
		</div>
	</div>
<% end %>